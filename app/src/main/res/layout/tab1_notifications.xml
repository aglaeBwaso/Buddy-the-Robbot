<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.main.PlaceholderFragment"
    >

<TextView
    android:id="@+id/section_label"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    app:layout_constraintLeft_toLeftOf="parent"
    tools:layout_constraintLeft_creator="1"
    tools:layout_constraintTop_creator="1"
    />

    <ImageView
        android:layout_width="107dp"
        android:layout_height="98dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/notif" />

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:layout_centerHorizontal="true"
        android:background="#FFC107">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good morning Mike, time to get up!"
            android:layout_centerVertical="true"

            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="180dp"
        android:layout_centerHorizontal="true"
        android:background="#FF5722">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did you eat breakfast?"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheckBox"
            android:layout_centerVertical="true"
            android:layout_marginLeft="240dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        android:background="#F44336">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="It's raining today.\nDon't forget to take an umbrella!"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:layout_marginTop="330dp"
        android:layout_centerHorizontal="true"
        android:background="#E91E63">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time to go!\nCheck your bag before leaving!"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_marginTop="410dp"
        android:layout_centerHorizontal="true"
        android:background="#9C27B0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Did you leave?"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            />

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CheckBox"
            android:layout_centerVertical="true"
            android:layout_marginLeft="240dp"
            />
    </RelativeLayout>


</RelativeLayout>